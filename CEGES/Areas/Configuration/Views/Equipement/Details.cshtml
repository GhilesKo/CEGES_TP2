@model Equipement
@{
    ViewData["Title"] = Model.Nom;
}

<h3>
    @Model.Nom
    <small class="text-muted">(Équipement)</small>
</h3>
<div class="row pb-3 backgroundWhite">
    <div class="col-4 col-sm-12">
        <a asp-area="Configuration" asp-controller="Equipement" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-secondary  col-10">
            <i class="fas fa-plus-circle"></i> &nbsp;Modifier l'équipement
        </a>
    </div>
</div>

<div class="row pb-3 backgroundWhite">
    <div class="col-6">
        @await Html.PartialAsync("_DetailInfo", new DetailInfoVM("Type", Model.Type.GetDisplayName()))
        @await Html.PartialAsync("_Equipement" + Model.Type.ToString() + "Detail", Model)
    </div>
    <div class="col-6">
        @await Html.PartialAsync("_Equipement" + Model.Type.ToString() + "Help", Model)
    </div>
</div>
<div class="row pb-3 backgroundWhite">
    <div class="col-4 pb-2 align-items-end">
        <a asp-area="Configuration" asp-controller="Groupe" asp-action="Details" asp-route-id="@Model.GroupeId" class="btn btn-secondary  col-10">
            <i class="fas fa-plus-circle"></i> &nbsp;Retour à @Model.Groupe.Nom
        </a>
    </div>
</div>
